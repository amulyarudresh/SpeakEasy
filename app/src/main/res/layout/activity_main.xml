<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary"
        android:padding="20dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SpeakEasy Coach"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Master your communication skills"
            android:textSize="14sp"
            android:textColor="#B3FFFFFF"
            android:layout_marginTop="4dp"/>
            
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="History ðŸ“œ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:backgroundTint="@color/white"
            app:cornerRadius="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="-40dp"/>

        <Button
            android:id="@+id/btnPremium"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Go Pro ðŸ‘‘"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:backgroundTint="#FFC107"
            app:cornerRadius="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/footerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipToPadding="false">

            <!-- Scenario Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface"
                android:layout_marginBottom="16dp">
                
                <Spinner
                    android:id="@+id/spinnerScenario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:spinnerMode="dropdown"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tone Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface"
                android:layout_marginBottom="16dp">
                
                <Spinner
                    android:id="@+id/spinnerTone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:spinnerMode="dropdown"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- AI Speech Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_info"
                            app:tint="@color/primary"/>
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Feedback"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtAiSpeech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hi! I'm listening. Tap the button and answer: Tell me about yourself."
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="6dp"/>
                        
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>
                        
                    <TextView
                        android:id="@+id/txtResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your speech will appear here..."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="monospace"
                        android:background="#F5F5F5"
                        android:padding="10dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Visualizer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Audio Visualizer"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"/>
                
            <com.example.speakeasy.WaveformView
                android:id="@+id/volumeMeter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"/>

            <!-- Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="16dp">

                <!-- EQ Meter Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/surface"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tone Check"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:textAllCaps="true"/>
                            
                        <TextView
                            android:id="@+id/txtEqEmoji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜Œ"
                            android:textSize="48sp"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Filler Words Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/surface"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Filler Words"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:textAllCaps="true"/>
                            
                        <TextView
                            android:id="@+id/txtFillerCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/error"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Pro Report Button -->
            <Button
                android:id="@+id/btnProReport"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Unlock Pro Report ðŸ“"
                android:textSize="16sp"
                android:backgroundTint="#FFC107"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:visibility="gone"
                android:layout_marginBottom="20dp"/>
                
        </LinearLayout>
    </ScrollView>

    <!-- Footer Action Area -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/surface"
        android:padding="16dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnRecord"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/tap_to_reply"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            app:cornerRadius="35dp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>